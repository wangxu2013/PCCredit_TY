<?xml version="1.0" encoding="UTF-8"?>
<validators>
	<validator id="system.user">
		<control name="displayName">
			<entry type="required" value="true" />
			<entry type="maxlength" value="32" />
		</control>
		<control name="login">
			<entry type="required" value="true" />
			<entry type="maxlength" value="32" />
		</control>
		<control name="age">
			<entry type="number" value="true" />
			<entry type="max" value="150" />
			<entry type="min" value="18" />
		</control>
		<control name="email">
			<entry type="email" value="true" />
		</control>
		<control name="mobile">
			<entry type="mobile" value="true" />
		</control>
		<control name="phone">
			<entry type="phone" value="true" />
		</control>
	
	</validator>
</validators>